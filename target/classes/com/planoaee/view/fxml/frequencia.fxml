<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.planoaee.view.controllers.FrequenciaController">
   <children>
      <!-- Cabeçalho -->
      <VBox style="-fx-background-color: #2E8B57; -fx-background-radius: 10px 10px 0px 0px;">
         <children>
            <Label text="Controle de Frequência" textFill="WHITE" style="-fx-font-size: 18px; -fx-font-weight: bold;">
               <padding>
                  <Insets bottom="10.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </Label>
         </children>
      </VBox>
      
      <!-- Controles Principais -->
      <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-border-width: 0px 0px 1px 0px;">
         <children>
            <Label text="Data:" style="-fx-font-weight: bold;">
               <padding>
                  <Insets bottom="10.0" left="20.0" right="5.0" top="10.0" />
               </padding>
            </Label>
            <DatePicker fx:id="datePickerData" prefWidth="150.0">
               <padding>
                  <Insets bottom="10.0" top="10.0" />
               </padding>
            </DatePicker>
            
            <Separator orientation="VERTICAL">
               <padding>
                  <Insets bottom="10.0" top="10.0" />
               </padding>
            </Separator>
            
            <Button fx:id="btnRegistrarFrequencia" onAction="#handleRegistrarFrequencia" text="Registrar Frequência" style="-fx-background-color: #28a745; -fx-text-fill: white;" prefWidth="150.0">
               <padding>
                  <Insets bottom="10.0" top="10.0" />
               </padding>
            </Button>
            
            <Button fx:id="btnAtualizarFrequencia" onAction="#handleRegistrarFrequenciaLote" text="Registrar em Lote" style="-fx-background-color: #17a2b8; -fx-text-fill: white;" prefWidth="130.0">
               <padding>
                  <Insets bottom="10.0" top="10.0" />
               </padding>
            </Button>
            
            <Region HBox.hgrow="ALWAYS" />
            
            <Button fx:id="btnRelatorioMensal" onAction="#handleRelatorioMensal" text="Relatório Mensal" style="-fx-background-color: #ffc107; -fx-text-fill: black;" prefWidth="130.0">
               <padding>
                  <Insets bottom="10.0" top="10.0" />
               </padding>
            </Button>
            
            <Button fx:id="btnRelatorioSemestral" onAction="#handleRelatorioSemestral" text="Relatório Semestral" style="-fx-background-color: #6f42c1; -fx-text-fill: white;" prefWidth="140.0">
               <padding>
                  <Insets bottom="10.0" right="20.0" top="10.0" />
               </padding>
            </Button>
         </children>
      </HBox>
      
      <!-- Estatísticas -->
      <HBox alignment="CENTER" style="-fx-background-color: #e9ecef;">
         <children>
            <Label fx:id="lblEstatisticas" text="Selecione uma data para ver as estatísticas" style="-fx-font-weight: bold; -fx-text-fill: #495057;">
               <padding>
                  <Insets bottom="8.0" left="20.0" right="20.0" top="8.0" />
               </padding>
            </Label>
         </children>
      </HBox>
      
      <!-- Conteúdo Principal -->
      <HBox spacing="20.0" style="-fx-background-color: #f5f5f5;">
         <children>
            <!-- Lista de Alunos -->
            <VBox spacing="10.0" prefWidth="400.0" style="-fx-background-color: white; -fx-background-radius: 10px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
               <children>
                  <Label text="Lista de Alunos" style="-fx-font-weight: bold; -fx-font-size: 14px;">
                     <padding>
                        <Insets bottom="5.0" left="15.0" right="15.0" top="15.0" />
                     </padding>
                  </Label>
                  
                  <TableView fx:id="tableViewAlunos" VBox.vgrow="ALWAYS">
                     <columns>
                        <TableColumn fx:id="colNome" prefWidth="200.0" text="Nome" />
                        <TableColumn fx:id="colIdade" prefWidth="80.0" text="Idade" />
                        <TableColumn fx:id="colStatus" prefWidth="100.0" text="Status" />
                     </columns>
                  </TableView>
                  
                  <Label text="Selecione um aluno para registrar frequência individual" style="-fx-font-size: 11px; -fx-text-fill: #666666;">
                     <padding>
                        <Insets bottom="10.0" left="15.0" right="15.0" top="5.0" />
                     </padding>
                  </Label>
               </children>
            </VBox>
            
            <!-- Lista de Frequências -->
            <VBox spacing="10.0" HBox.hgrow="ALWAYS" style="-fx-background-color: white; -fx-background-radius: 10px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
               <children>
                  <Label text="Frequências Registradas" style="-fx-font-weight: bold; -fx-font-size: 14px;">
                     <padding>
                        <Insets bottom="5.0" left="15.0" right="15.0" top="15.0" />
                     </padding>
                  </Label>
                  
                  <TableView fx:id="tableViewFrequencias" VBox.vgrow="ALWAYS">
                     <columns>
                        <TableColumn fx:id="colData" prefWidth="100.0" text="Data" />
                        <TableColumn fx:id="colAluno" prefWidth="150.0" text="Aluno" />
                        <TableColumn fx:id="colPresenca" prefWidth="80.0" text="Status" />
                        <TableColumn fx:id="colObservacoes" text="Observações" />
                     </columns>
                  </TableView>
                  
                  <VBox spacing="5.0">
                     <children>
                        <Label text="Observações Gerais:" style="-fx-font-weight: bold;" />
                        <TextArea fx:id="txtObservacoes" promptText="Digite observações gerais sobre a frequência..." prefRowCount="2" />
                     </children>
                     <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="5.0" />
                     </padding>
                  </VBox>
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </HBox>
   </children>
</VBox>
