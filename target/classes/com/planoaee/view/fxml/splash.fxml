<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: linear-gradient(to bottom, #2E8B57, #228B22);" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <!-- Logo/Imagem da APAPEQ -->
      <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
      
      <!-- Título do Sistema -->
      <Label text="Plano AEE" textFill="WHITE">
         <font>
            <Font name="System Bold" size="36.0" />
         </font>
      </Label>
      
      <!-- Subtítulo -->
      <Label text="Sistema de Gestão APAPEQ" textFill="WHITE">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      
      <!-- Barra de Progresso -->
      <ProgressBar prefWidth="300.0" progress="0.0" />
      
      <!-- Status de Carregamento -->
      <Label text="Inicializando sistema..." textFill="WHITE">
         <font>
            <Font size="12.0" />
         </font>
      </Label>
      
      <!-- Versão -->
      <Label text="Versão 1.0.0" textFill="WHITE">
         <font>
            <Font size="10.0" />
         </font>
      </Label>
   </children>
   <padding>
      <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
   </padding>
</VBox>

