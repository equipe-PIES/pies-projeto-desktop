<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.planoaee.view.controllers.AlunoController">
   <children>
      <!-- Cabeçalho -->
      <VBox style="-fx-background-color: #2E8B57; -fx-background-radius: 10px 10px 0px 0px;">
         <children>
            <Label text="Gerenciamento de Alunos" textFill="WHITE" style="-fx-font-size: 18px; -fx-font-weight: bold;">
               <padding>
                  <Insets bottom="10.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </Label>
         </children>
      </VBox>
      
      <!-- Conteúdo Principal -->
      <HBox spacing="20.0" style="-fx-background-color: #f5f5f5;">
         <children>
            <!-- Painel de Busca -->
            <VBox spacing="10.0" prefWidth="300.0" style="-fx-background-color: white; -fx-background-radius: 10px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
               <children>
                  <Label text="Buscar Alunos" style="-fx-font-weight: bold; -fx-font-size: 14px;">
                     <padding>
                        <Insets bottom="5.0" left="15.0" right="15.0" top="15.0" />
                     </padding>
                  </Label>
                  
                  <HBox spacing="10.0">
                     <children>
                        <TextField fx:id="txtBusca" promptText="Digite o nome do aluno..." prefWidth="180.0" />
                        <Button fx:id="btnBuscar" onAction="#handleBuscar" text="Buscar" style="-fx-background-color: #2E8B57; -fx-text-fill: white;" />
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="15.0" right="15.0" top="0.0" />
                     </padding>
                  </HBox>
                  
                  <Separator />
                  
                  <!-- Formulário -->
                  <Label text="Dados do Aluno" style="-fx-font-weight: bold; -fx-font-size: 14px;">
                     <padding>
                        <Insets bottom="5.0" left="15.0" right="15.0" top="10.0" />
                     </padding>
                  </Label>
                  
                  <VBox spacing="8.0">
                     <children>
                        <VBox spacing="3.0">
                           <children>
                              <Label text="Nome *" style="-fx-font-weight: bold;" />
                              <TextField fx:id="txtNome" promptText="Nome completo do aluno" />
                           </children>
                        </VBox>
                        
                        <VBox spacing="3.0">
                           <children>
                              <Label text="Idade *" style="-fx-font-weight: bold;" />
                              <Spinner fx:id="spinnerIdade" prefWidth="100.0" />
                           </children>
                        </VBox>
                        
                        <VBox spacing="3.0">
                           <children>
                              <Label text="Responsável" style="-fx-font-weight: bold;" />
                              <TextField fx:id="txtResponsavel" promptText="Nome do responsável" />
                           </children>
                        </VBox>
                        
                        <VBox spacing="3.0">
                           <children>
                              <Label text="Contato" style="-fx-font-weight: bold;" />
                              <TextField fx:id="txtContato" promptText="Telefone ou e-mail" />
                           </children>
                        </VBox>
                        
                        <VBox spacing="3.0">
                           <children>
                              <Label text="Observações" style="-fx-font-weight: bold;" />
                              <TextArea fx:id="txtObservacoes" promptText="Observações sobre o aluno" prefRowCount="3" />
                           </children>
                        </VBox>
                     </children>
                     <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="5.0" />
                     </padding>
                  </VBox>
                  
                  <!-- Botões do Formulário -->
                  <HBox spacing="10.0" alignment="CENTER">
                     <children>
                        <Button fx:id="btnNovo" onAction="#handleNovo" text="Novo" style="-fx-background-color: #28a745; -fx-text-fill: white;" prefWidth="70.0" />
                        <Button fx:id="btnSalvar" onAction="#handleSalvar" text="Salvar" style="-fx-background-color: #2E8B57; -fx-text-fill: white;" prefWidth="70.0" />
                        <Button fx:id="btnEditar" onAction="#handleEditar" text="Editar" style="-fx-background-color: #ffc107; -fx-text-fill: black;" prefWidth="70.0" />
                        <Button fx:id="btnExcluir" onAction="#handleExcluir" text="Excluir" style="-fx-background-color: #dc3545; -fx-text-fill: white;" prefWidth="70.0" />
                     </children>
                  </HBox>
                  
                  <HBox alignment="CENTER">
                     <children>
                        <Button fx:id="btnLimpar" onAction="#handleLimpar" text="Limpar" style="-fx-background-color: #6c757d; -fx-text-fill: white;" />
                     </children>
                     <padding>
                        <Insets bottom="15.0" top="10.0" />
                     </padding>
                  </HBox>
               </children>
            </VBox>
            
            <!-- Tabela de Alunos -->
            <VBox spacing="10.0" HBox.hgrow="ALWAYS" style="-fx-background-color: white; -fx-background-radius: 10px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
               <children>
                  <Label text="Lista de Alunos" style="-fx-font-weight: bold; -fx-font-size: 14px;">
                     <padding>
                        <Insets bottom="5.0" left="15.0" right="15.0" top="15.0" />
                     </padding>
                  </Label>
                  
                  <TableView fx:id="tableViewAlunos" VBox.vgrow="ALWAYS">
                     <columns>
                        <TableColumn fx:id="colNome" prefWidth="200.0" text="Nome" />
                        <TableColumn fx:id="colIdade" prefWidth="80.0" text="Idade" />
                        <TableColumn fx:id="colResponsavel" prefWidth="200.0" text="Responsável" />
                        <TableColumn fx:id="colContato" prefWidth="150.0" text="Contato" />
                     </columns>
                  </TableView>
                  
                  <Label text="* Campos obrigatórios" style="-fx-font-size: 11px; -fx-text-fill: #666666;">
                     <padding>
                        <Insets bottom="10.0" left="15.0" right="15.0" top="5.0" />
                     </padding>
                  </Label>
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </HBox>
   </children>
</VBox>
