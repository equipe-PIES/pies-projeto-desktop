<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.planoaee.view.controllers.LoginController">
   <children>
      <!-- Cabeçalho -->
      <VBox alignment="CENTER" spacing="10.0">
         <children>
            <Label text="Plano AEE" textFill="#2E8B57">
               <font>
                  <Font name="System Bold" size="28.0" />
               </font>
            </Label>
            <Label text="Sistema de Gestão APAPEQ" textFill="#666666">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
         </children>
      </VBox>
      
      <!-- Painel de Login -->
      <VBox alignment="CENTER" spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
         <children>
            <!-- Título do Painel -->
            <Label text="Acesso ao Sistema" textFill="#333333">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            
            <!-- Formulário -->
            <VBox alignment="CENTER" spacing="12.0">
               <children>
                  <!-- Campo Email -->
                  <VBox spacing="5.0">
                     <children>
                        <Label text="E-mail:" textFill="#333333">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                        </Label>
                        <TextField fx:id="txtEmail" promptText="Digite seu e-mail" prefWidth="250.0" />
                     </children>
                  </VBox>
                  
                  <!-- Campo Senha -->
                  <VBox spacing="5.0">
                     <children>
                        <Label text="Senha:" textFill="#333333">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                        </Label>
                        <PasswordField fx:id="txtSenha" promptText="Digite sua senha" prefWidth="250.0" />
                     </children>
                  </VBox>
                  
                  <!-- Checkbox Lembrar -->
                  <CheckBox fx:id="chkLembrar" text="Lembrar usuário" textFill="#666666">
                     <font>
                        <Font size="11.0" />
                     </font>
                  </CheckBox>
               </children>
            </VBox>
            
            <!-- Botões -->
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                  <Button fx:id="btnEntrar" onAction="#handleLogin" text="Entrar" style="-fx-background-color: #2E8B57; -fx-text-fill: white; -fx-background-radius: 5;" prefWidth="100.0">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Button>
                  <Button fx:id="btnCancelar" onAction="#handleCancel" text="Cancelar" style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-background-radius: 5;" prefWidth="100.0">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
            
            <!-- Link Esqueci Senha -->
            <Hyperlink fx:id="linkEsqueciSenha" onAction="#handleForgotPassword" text="Esqueci minha senha" textFill="#2E8B57">
               <font>
                  <Font size="10.0" />
               </font>
            </Hyperlink>
         </children>
         <padding>
            <Insets bottom="30.0" left="40.0" right="40.0" top="30.0" />
         </padding>
      </VBox>
      
      <!-- Rodapé -->
      <VBox alignment="CENTER" spacing="5.0">
         <children>
            <Label text="APAPEQ - Associação de Pais e Amigos de Pessoas Especiais de Quixadá" textFill="#666666">
               <font>
                  <Font size="10.0" />
               </font>
            </Label>
            <Label text="Sistema desenvolvido para gestão de relatórios e frequência" textFill="#999999">
               <font>
                  <Font size="9.0" />
               </font>
            </Label>
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
   </padding>
</VBox>

