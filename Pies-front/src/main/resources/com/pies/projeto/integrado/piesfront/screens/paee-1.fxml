<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.scene.*?>
<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="anamnese" prefHeight="880.0" prefWidth="1220.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pies.projeto.integrado.piesfront.controllers.PDIController">

    <!-- TOPO -->
    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="60.0" style="-fx-background-color: #ffffff;">
            <padding>
                <Insets left="20.0" right="20.0" />
            </padding>
            <children>
                <Region prefHeight="60.0" prefWidth="15.0" />

                <Button id="sairButton" fx:id="sairButton" onAction="#handleSairButtonAction" prefWidth="100.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Sair">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
                </Button>
                  <VBox prefHeight="42.0" prefWidth="227.0">
                      <children>
                          <Label id="nameUser" fx:id="nameUser" prefHeight="21.0" prefWidth="150.0" style="-fx-font-weight: bold;" text="Nome de Usuário" />
                          <Label id="cargoUser" fx:id="cargoUser" style="-fx-text-fill: #666;" text="Professora" />
                      </children>
               <HBox.margin>
                  <Insets top="10.0" />
               </HBox.margin>
                  </VBox>
                <VBox alignment="CENTER_LEFT" prefHeight="60.0" prefWidth="140.0" />

                <Region HBox.hgrow="ALWAYS" />

                <HBox alignment="CENTER_RIGHT" spacing="15.0">
                    <children>
                        <Button id="turmasButton" fx:id="turmasButton" onAction="#handleTurmasButtonAction" text="Turmas" />
                        <Button id="alunosButton" fx:id="alunosButton" text="Alunos" />
                        <Button id="relatoriosButton" fx:id="relatoriosButton" text="Relatórios" />
                    </children>
                </HBox>
            </children>
        </HBox>
    </top>


    <!-- CONTEÚDO CENTRAL -->
    <center>
        <VBox spacing="20" style="-fx-background-color: white;">
            <padding>
                <Insets bottom="20" left="30" right="30" top="30" />
            </padding>

            <children>
                  <Label id="indicadorDeTela" fx:id="indicadorDeTela" prefHeight="35.0" prefWidth="516.0" text="indicadorDeTela">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
                <Label text="Plano de Atendimento Educacional Especializado">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>


                <!-- OBJETIVOS DO PLANO -->
                <VBox spacing="12" style="-fx-border-color: #ddd; -fx-border-radius: 5;">

                    <padding>
                        <Insets bottom="20" left="20" right="20" top="20" />
                    </padding>

                    <children>

                        <Label style="-fx-font-weight: bold;" text="Resumo" />

                        <Label prefHeight="21.0" prefWidth="444.0" text="Apresente o resumo de caso do educando." />
                        <TextArea fx:id="objetivosPlano" prefHeight="120" promptText="Digite" wrapText="true" />

                    </children>

                </VBox>

                <!-- ORGANIZAÇÃO DO ATENDIMENTO -->
                <VBox spacing="12" style="-fx-border-color: #ddd; -fx-border-radius: 5;">

                    <padding>
                        <Insets bottom="20" left="20" right="20" top="20" />
                    </padding>

                    <children>

                        <Label style="-fx-font-weight: bold;" text="Dificuldades apresentadas" />

                        <HBox spacing="30">
                            <children>

                                <!-- COLUNA ESQUERDA -->
                                <VBox prefHeight="206.0" prefWidth="380.0" spacing="10">
                                    <children>

                                        <Label text="Motores/Psicomotores" />
                              <ChoiceBox prefWidth="300.0" />
                              <Label text="Cognitivo" />
                              <ChoiceBox prefWidth="300.0" />
                              <Label text="Sensorial" />
                              <ChoiceBox prefWidth="300.0" />

                                        <Label text="Linguagem oral/Comunicação" />
                              <ChoiceBox prefWidth="300.0" />
                                    </children>

                                </VBox>


                                <!-- COLUNA DIREITA -->
                                <VBox prefHeight="206.0" prefWidth="416.0" spacing="10">
                                    <children>

                                        <Label text="Familiar" />
                              <ChoiceBox prefWidth="300.0" />

                                        <Label text="Afetivo/Interpessoais" />
                              <ChoiceBox prefWidth="300.0" />
                              <Label text="Raciocínio Lógico/Matemático" />
                              <ChoiceBox prefWidth="300.0" />
                              <Label text="AVAs" />
                              <ChoiceBox prefWidth="300.0" />
                                    </children>

                                </VBox>
                            </children>

                        </HBox>

                    </children>

                </VBox>


                <!-- BOTÕES -->
                <HBox alignment="CENTER_RIGHT" spacing="20">
                    <children>
                        <Label fx:id="validationMsg" textFill="#e74c3c" visible="false">Algum campo está em branco. Preencha para prosseguir.</Label>
                        <Button onAction="#handleCancelAction" text="Cancelar" />
                        <Button onAction="#handleBackAction" text="Voltar" />
                        <Button onAction="#handleGoToPdi2" style="-fx-background-color: #bdbdbd;" text="Seguinte" />
                    </children>
                </HBox>


            </children>
        </VBox>
    </center>


</BorderPane>
