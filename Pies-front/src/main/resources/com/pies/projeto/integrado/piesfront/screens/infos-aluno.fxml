      </columnConstraints>
      <children>
        <Label text="Nome:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <Label fx:id="nomeLabel" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label text="Data de Nascimento:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <Label fx:id="dataNascimentoLabel" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Label text="CPF:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <Label fx:id="cpfLabel" GridPane.columnIndex="1" GridPane.rowIndex="2" />

