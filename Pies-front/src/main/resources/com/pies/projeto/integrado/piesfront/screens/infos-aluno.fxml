        <Label fx:id="contatoLabel" GridPane.columnIndex="1" GridPane.rowIndex="12" />

        <Label text="Endereço:" GridPane.columnIndex="0" GridPane.rowIndex="13" />
        <Label fx:id="enderecoLabel" GridPane.columnIndex="1" GridPane.rowIndex="13" />

        <Label text="Turma:" GridPane.columnIndex="0" GridPane.rowIndex="14" />
        <Label fx:id="turmaLabel" GridPane.columnIndex="1" GridPane.rowIndex="14" />

        <Label text="Professora Responsável:" GridPane.columnIndex="0" GridPane.rowIndex="15" />
        <Label fx:id="professoraResponsavelLabel" GridPane.columnIndex="1" GridPane.rowIndex="15" />

