<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane maxHeight="800.0" maxWidth="1200.0" prefHeight="800.0" prefWidth="1200.0" stylesheets="@../styles/style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pies.projeto.integrado.piesfront.controllers.LoginController">

    <center>
        <HBox BorderPane.alignment="CENTER">

            <VBox alignment="CENTER_LEFT" prefWidth="500.0" HBox.hgrow="ALWAYS">
                <padding>
                    <Insets left="80.0" />
                </padding>
                <children>
                    <Text fx:id="nomeDoSoftware" strokeType="OUTSIDE" strokeWidth="0.0" text="AmparoEdu">
                        <font>
                            <Font name="Inter Semi Bold" size="64.0" />
                        </font>
                    </Text>
                    <Label fx:id="fraseAutoria" text="Você está usando um sistema desenvolvido por quixada.ufc.br">
                        <font>
                            <Font name="Inter Semi Bold" size="10.0" />
                        </font>
                        <VBox.margin>
                            <Insets bottom="20.0" />
                        </VBox.margin>
                    </Label>
                </children>
            </VBox>

            <VBox fx:id="barraLateral" alignment="CENTER" style="-fx-background-color: #d6d6d6;" HBox.hgrow="ALWAYS">

                <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="390.0" prefWidth="330.0" style="-fx-background-color: white; -fx-background-radius: 5;">
                    <children>

                        <Label fx:id="titleLogin" text="Login" textOverrun="CLIP">
                            <font>
                                <Font name="Inter Semi Bold" size="25.0" />
                            </font>
                            <VBox.margin>
                                <Insets bottom="30.0" />
                            </VBox.margin>
                        </Label>

                        <Label fx:id="legendaEmail" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="16.0" prefWidth="43.0" text="E-mail:">
                            <font>
                                <Font name="Inter Regular" size="13.0" />
                            </font>
                            <VBox.margin>
                                <Insets bottom="5.0" right="220.0" />
                            </VBox.margin>
                        </Label>
                        <TextField fx:id="emailField" maxWidth="Infinity" prefHeight="40.0" promptText="Digite aqui">
                            <font>
                                <Font name="Inter Regular" size="13.0" />
                            </font>
                            <VBox.margin>
                                <Insets bottom="20.0" top="5.0" />
                            </VBox.margin>
                        </TextField>

                        <Label fx:id="legendaPassword" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="16.0" prefWidth="43.0" text="Senha:">
                            <font>
                                <Font name="Inter Regular" size="13.0" />
                            </font>
                            <VBox.margin>
                                <Insets bottom="5.0" right="220.0" />
                            </VBox.margin>
                        </Label>
                        <PasswordField fx:id="passwordField" maxWidth="Infinity" prefHeight="40.0" promptText="Digite aqui">
                            <font>
                                <Font name="Inter Regular" size="13.0" />
                            </font>
                            <VBox.margin>
                                <Insets bottom="40.0" top="5.0" />
                            </VBox.margin>
                        </PasswordField>

                        <Button fx:id="loginButton" maxWidth="Infinity" mnemonicParsing="false" onAction="#handleLoginButtonAction" prefHeight="40.0" style="-fx-background-color: #34bc74;" text="Entrar" textFill="WHITE">
                            <font>
                                <Font name="Inter Regular" size="13.0" />
                            </font>
                        </Button>

                    </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <padding>
                  <Insets left="30.0" right="30.0" />
               </padding>
                </VBox>

            </VBox>

        </HBox>
    </center>

</BorderPane>
