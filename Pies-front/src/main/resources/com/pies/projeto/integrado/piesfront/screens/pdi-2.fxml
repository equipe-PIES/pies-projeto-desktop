<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="anamnese" prefHeight="880.0" prefWidth="1220.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pies.projeto.integrado.piesfront.controllers.PDIController">

    <!-- TOPO -->
    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="60.0" style="-fx-background-color: #ffffff;">
            <padding>
                <Insets left="20.0" right="20.0" />
            </padding>
            <children>
                <Region prefHeight="60.0" prefWidth="15.0" />

                <Button id="sairButton" fx:id="sairButton" onAction="#handleSairButtonAction" prefWidth="100.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Sair" />
                <VBox alignment="CENTER_LEFT" prefHeight="60.0" prefWidth="140.0">
               <children>
                        <VBox prefHeight="200.0" prefWidth="100.0">
                            <children>
                                <Label id="nameUser" fx:id="nameUser" style="-fx-font-weight: bold;" text="Nome de Usuário" />
                                <Label id="cargoUser" fx:id="cargoUser" style="-fx-text-fill: #666;" text="Professora" />
                            </children>
                     <VBox.margin>
                        <Insets left="10.0" top="10.0" />
                     </VBox.margin>
                        </VBox>
               </children>
                </VBox>

                <Region HBox.hgrow="ALWAYS" />

                <HBox alignment="CENTER_RIGHT" spacing="15.0">
                    <children>
                        <Button id="turmasButton" fx:id="turmasButton" onAction="#handleTurmasButtonAction" text="Turmas" />
                        <Button id="alunosButton" fx:id="alunosButton" text="Alunos" />
                    </children>
                </HBox>
            </children>
        </HBox>
    </top>


    <!-- CONTEÚDO CENTRAL -->
    <center>
        <!-- ScrollPane para garantir que o conteúdo seja rolável em telas menores -->
        <ScrollPane fitToWidth="true" style="-fx-background-color: white;" BorderPane.alignment="CENTER">
            <content>
                <VBox spacing="20" style="-fx-background-color: white;">
                    <padding>
                        <Insets bottom="30" left="30" right="30" top="30" />
                    </padding>
                    <children>
                        <!-- Título do Formulário (Estilização removida) -->
                        <Label text="Plano de Desenvolvimento Individual">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font></Label>

                        <!-- POTENCIALIDADES -->
                        <VBox spacing="8" style="-fx-border-color: #ddd; -fx-border-width: 1; -fx-border-radius: 5; -fx-background-color: #ffffff;">
                            <padding>
                                <Insets bottom="20" left="20" right="20" top="20" />
                            </padding>
                            <children>
                                <!-- Estilização removida -->
                                <Label text="Potencialidades">
                           <font>
                              <Font name="System Bold" size="15.0" />
                           </font></Label>
                                <!-- Estilização removida -->
                                <Label text="Capacidade do aluno, que pode vir a ser." />
                                <TextArea fx:id="potencialidadesTextArea" prefHeight="120" promptText="Digite" VBox.vgrow="ALWAYS" />
                            </children>
                        </VBox>

                        <!-- NECESSIDADES EDUCACIONAIS ESPECIAIS -->
                        <VBox spacing="8" style="-fx-border-color: #ddd; -fx-border-width: 1; -fx-border-radius: 5; -fx-background-color: #ffffff;">
                            <padding>
                                <Insets bottom="20" left="20" right="20" top="20" />
                            </padding>
                            <children>
                                <!-- Estilização removida -->
                                <Label text="Necessidades Educacionais Especiais">
                           <font>
                              <Font name="System Bold" size="15.0" />
                           </font></Label>
                                <TextArea fx:id="necessidadesTextArea" prefHeight="120" promptText="Digite" VBox.vgrow="ALWAYS" />
                            </children>
                        </VBox>

                        <!-- HABILIDADES -->
                        <VBox spacing="8" style="-fx-border-color: #ddd; -fx-border-width: 1; -fx-border-radius: 5; -fx-background-color: #ffffff;">
                            <padding>
                                <Insets bottom="20" left="20" right="20" top="20" />
                            </padding>
                            <children>
                                <!-- Estilização removida -->
                                <Label text="Habilidades">
                           <font>
                              <Font name="System Bold" size="15.0" />
                           </font></Label>
                                <!-- Estilização removida -->
                                <Label text="Competências, capacidade." />
                                <TextArea fx:id="habilidadesTextArea" prefHeight="200" promptText="Digite" VBox.vgrow="ALWAYS" />
                            </children>
                        </VBox>


                        <!-- BOTÕES -->
                        <HBox alignment="CENTER_RIGHT" spacing="15">
                            <children>
                                <Button fx:id="cancelarButton" onAction="#handleCancelAction" style="-fx-background-color: transparent; -fx-border-color: #95a5a6; -fx-border-width: 1; -fx-border-radius: 3; -fx-padding: 8 15; -fx-text-fill: #95a5a6;" text="Cancelar" />
                                <Button fx:id="seguinteButton" onAction="#handleGoToPdi3" style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-border-radius: 3; -fx-padding: 8 15;" text="Seguinte" />
                            </children>
                        </HBox>

                    </children>
                </VBox>
            </content>
        </ScrollPane>
    </center>

</BorderPane>
