<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.scene.*?>
<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="anamnese" prefHeight="880.0" prefWidth="1220.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pies.projeto.integrado.piesfront.controllers.PDIController">

    <!-- TOPO -->
    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="60.0" style="-fx-background-color: #ffffff;">
            <padding>
                <Insets left="20.0" right="20.0" />
            </padding>
            <children>
                <Region prefHeight="60.0" prefWidth="15.0" />
                <VBox alignment="CENTER_LEFT" prefHeight="60.0" prefWidth="140.0">
                    <children>

                        <Label id="tituloAmparoEdu" fx:id="tituloAmparoEdu" prefHeight="21.0" prefWidth="92.0" text="AmparoEdu" />
                        <Label id="indicadorDeTela" fx:id="indicadorDeTela" prefHeight="21.0" prefWidth="131.0" text="indicadorDeTela" />
                    </children>
                </VBox>

                <Region HBox.hgrow="ALWAYS" />

                <HBox alignment="CENTER_RIGHT" spacing="15.0">
                    <children>
                        <Button id="turmasButton" fx:id="turmasButton" onAction="#handleTurmasButtonAction" text="Turmas" />
                        <Button id="alunosButton" fx:id="alunosButton" text="Alunos" />
                        <Button id="relatoriosButton" fx:id="relatoriosButton" text="Relatórios" />
                    </children>
                </HBox>
            </children>
        </HBox>
    </top>


    <!-- MENU LATERAL -->
    <left>
        <VBox prefHeight="820.0" prefWidth="280.0" style="-fx-background-color: #f4f4f4;">
            <padding>
                <Insets left="15.0" right="15.0" top="20.0" />
            </padding>
            <children>
                <HBox alignment="BOTTOM_CENTER" prefHeight="45.0" prefWidth="160.0">
                    <children>
                        <ImageView id="perfilUser" fx:id="perfilUser" fitHeight="45.0" fitWidth="45.0" pickOnBounds="true" preserveRatio="true" />
                        <Region prefHeight="45.0" prefWidth="16.0" />
                        <VBox prefHeight="200.0" prefWidth="100.0">
                            <children>
                                <Label id="nameUser" fx:id="nameUser" style="-fx-font-weight: bold;" text="Nome de Usuário" />
                                <Label id="cargoUser" fx:id="cargoUser" style="-fx-text-fill: #666;" text="Professora" />
                            </children>
                        </VBox>
                    </children>
                </HBox>

                <Region prefHeight="1024.0" prefWidth="210.0" />

                <Button id="sairButton" fx:id="sairButton" onAction="#handleSairButtonAction" prefWidth="280.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Sair">
                    <VBox.margin>
                        <Insets bottom="10.0" top="10.0" />
                    </VBox.margin>
                </Button>
            </children>
        </VBox>
    </left>


    <!-- CONTEÚDO CENTRAL -->
    <center>
        <VBox spacing="20" style="-fx-background-color: white;">
            <padding>
                <Insets bottom="20" left="30" right="30" top="30" />
            </padding>

            <children>
            <Label text="Plano de Desenvolvimento Individual">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>

                <!-- ORGANIZAÇÃO DO ATENDIMENTO -->
                <VBox spacing="12" style="-fx-border-color: #ddd; -fx-border-radius: 5;">

                    <padding>
                        <Insets bottom="20" left="20" right="20" top="20" />
                    </padding>

                    <children>

                        <Label style="-fx-font-weight: bold;" text="Organização do Atendimento" />

                        <HBox spacing="30">
   <children>
   
                               <!-- COLUNA ESQUERDA -->
                               <VBox prefHeight="206.0" prefWidth="380.0" spacing="10">
      <children>
      
                                      <Label text="Período do Plano de AEE" />
                                      <TextField fx:id="periodoPlano" promptText="Digite" />
      
                                      <Label text="Horário e tempo de atendimento" />
                                      <TextField fx:id="horarioAtendimento" promptText="Digite" />
      
                                      <Label text="Frequência do atendimento na semana" />
                                      <ChoiceBox fx:id="frequenciaSemana" prefWidth="300.0" />
      </children>
   
                               </VBox>
   
   
                               <!-- COLUNA DIREITA -->
                               <VBox prefHeight="206.0" prefWidth="416.0" spacing="10">
      <children>
      
                                      <Label text="Dias da semana" />
                                      <ChoiceBox fx:id="diasSemana" prefHeight="31.0" prefWidth="300.0" />
      
                                      <Label text="Composição do grupo" />
                                      <ChoiceBox fx:id="composicaoGrupo" prefWidth="300.0" />
      </children>
   
                               </VBox>
   </children>

                        </HBox>

                    </children>

                </VBox>


                <!-- OBJETIVOS DO PLANO -->
                <VBox spacing="12" style="-fx-border-color: #ddd; -fx-border-radius: 5;">

                    <padding>
                        <Insets bottom="20" left="20" right="20" top="20" />
                    </padding>

                    <children>

                        <Label style="-fx-font-weight: bold;" text="Objetivos do Plano" />

                        <Label text="O que é preciso atingir, meta." />
                        <TextArea fx:id="objetivosPlano" prefHeight="120" promptText="Digite" />

                    </children>

                </VBox>


                <!-- BOTÕES -->
                <HBox alignment="CENTER_RIGHT" spacing="20">
                    <children>
                        <Label fx:id="validationMsg" textFill="#e74c3c" visible="false">Algum campo está em branco. Preencha para prosseguir.</Label>
                        <Button onAction="#handleCancelAction" text="Cancelar" />
                        <Button onAction="#handleBackAction" text="Voltar" />
                        <Button onAction="#handleGoToPdi2" style="-fx-background-color: #bdbdbd;" text="Seguinte" />
                    </children>
                </HBox>


            </children>
        </VBox>
    </center>


</BorderPane>
