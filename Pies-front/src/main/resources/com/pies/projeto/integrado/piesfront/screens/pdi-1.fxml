<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane fx:id="anamnese" prefHeight="880.0" prefWidth="1220.0" stylesheets="@../styles/style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pies.projeto.integrado.piesfront.controllers.PDIController">

    <!-- TOPO -->
    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="60.0" style="-fx-background-color: #ffffff;">
            <padding>
                <Insets left="20.0" right="20.0" />
            </padding>
            <children>
                <Region prefHeight="60.0" prefWidth="15.0" />

                <Button id="sairButton" fx:id="sairButton" onAction="#handleSairButtonAction" prefWidth="100.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Sair" />
                <VBox alignment="CENTER_LEFT" prefHeight="60.0" prefWidth="140.0">
               <children>
                        <VBox prefHeight="200.0" prefWidth="100.0">
                            <children>
                                <Label id="nameUser" fx:id="nameUser" style="-fx-font-weight: bold;" text="Nome de Usuário" />
                                <Label id="cargoUser" fx:id="cargoUser" style="-fx-text-fill: #666;" text="Professora" />
                            </children>
                     <VBox.margin>
                        <Insets left="10.0" top="10.0" />
                     </VBox.margin>
                        </VBox>
               </children>
                </VBox>

                <Region HBox.hgrow="ALWAYS" />

                <HBox alignment="CENTER_RIGHT" spacing="15.0">
                    <children>
                        <Button id="turmasButton" fx:id="turmasButton" onAction="#handleTurmasButtonAction" styleClass="botao-topo" text="Turmas" />
                        <Button id="alunosButton" fx:id="alunosButton" styleClass="botao-topo" text="Alunos" />
                    </children>
                </HBox>
            </children>
        </HBox>
    </top>


    <!-- CONTEÚDO CENTRAL -->
    <center>
        <VBox spacing="20" style="-fx-background-color: white;">
            <padding>
                <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
            </padding>

            <children>
            <Label text="Plano de Desenvolvimento Individual">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>

                <!-- ORGANIZAÇÃO DO ATENDIMENTO -->
                <VBox spacing="12" style="-fx-border-color: #ddd; -fx-border-radius: 5;">

                    <padding>
                        <Insets bottom="20" left="20" right="20" top="20" />
                    </padding>

                    <children>

                        <Label style="-fx-font-weight: bold;" text="Organização do Atendimento" />

                        <HBox spacing="30">
   <children>

                               <!-- COLUNA ESQUERDA -->
                               <VBox spacing="10" HBox.hgrow="ALWAYS">
      <children>

                                      <Label text="Período do Plano de AEE" />
                                      <TextField fx:id="periodoPlano" promptText="Digite" styleClass="campo-digite-selecione" />

                                      <Label text="Horário e tempo de atendimento" />
                                      <TextField fx:id="horarioAtendimento" promptText="Digite" styleClass="campo-digite-selecione" />

                                      <Label text="Frequência do atendimento na semana" />
                                      <ChoiceBox fx:id="frequenciaSemana" prefWidth="200.0" styleClass="campo-digite-selecione" />
      </children>

                               </VBox>


                               <!-- COLUNA DIREITA -->
                               <VBox spacing="10" HBox.hgrow="ALWAYS">
      <children>

                                      <Label text="Dias da semana" />
                                      <ChoiceBox fx:id="diasSemana" prefWidth="200.0" styleClass="campo-digite-selecione" />

                                      <Label text="Composição do grupo" />
                                      <ChoiceBox fx:id="composicaoGrupo" prefWidth="200.0" styleClass="campo-digite-selecione" />
      </children>

                               </VBox>
   </children>

                        </HBox>

                    </children>

                </VBox>


                <!-- OBJETIVOS DO PLANO -->
                <VBox spacing="12" style="-fx-border-color: #ddd; -fx-border-radius: 5;">

                    <padding>
                        <Insets bottom="20" left="20" right="20" top="20" />
                    </padding>

                    <children>

                        <Label style="-fx-font-weight: bold;" text="Objetivos do Plano" />

                        <Label text="O que é preciso atingir, meta." />
                        <TextArea fx:id="objetivosPlano" promptText="Digite" styleClass="campo-digite-selecione" wrapText="true" />

                    </children>

                </VBox>


                <!-- BOTÕES -->
                <HBox alignment="BOTTOM_RIGHT" VBox.vgrow="ALWAYS">
                    <children>
                  <HBox alignment="BOTTOM_LEFT" HBox.hgrow="ALWAYS">
                     <children>
                              <Button alignment="CENTER" onAction="#handleCancelAction" prefWidth="220.0" styleClass="botao-cancelar-voltar-sair" text="Cancelar" />
                     </children>
                  </HBox>
                        <Label fx:id="validationMsg" textFill="#e74c3c" visible="false">Algum campo está em branco. Preencha para prosseguir.</Label>
                  <HBox alignment="BOTTOM_RIGHT" spacing="20.0" HBox.hgrow="ALWAYS">
                     <children>
                              <Button onAction="#handleBackAction" prefWidth="220.0" styleClass="botao-cancelar-voltar-sair" text="Voltar" />
                              <Button onAction="#handleGoToPdi2" prefWidth="220.0" styleClass="botao-seguinte" text="Seguinte" />
                     </children>
                  </HBox>
                    </children>
                </HBox>


            </children>
        </VBox>
    </center>


</BorderPane>
