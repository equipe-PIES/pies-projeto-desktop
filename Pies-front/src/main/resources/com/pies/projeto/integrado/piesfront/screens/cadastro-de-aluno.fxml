<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<BorderPane fx:id="cadastroAluno" prefHeight="880.0" prefWidth="1220.0" stylesheets="@../styles/style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pies.projeto.integrado.piesfront.controllers.CadastroAlunoController">

    <!-- TOPO -->
    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="60.0" style="-fx-background-color: #ffffff;">
            <padding>
                <Insets left="20.0" right="20.0" />
            </padding>
            <children>
                <Region prefHeight="60.0" prefWidth="15.0" />

                <Button id="sairButton" fx:id="sairButton" onAction="#handleSairButtonAction" prefHeight="35.0" prefWidth="35.0" style="-fx-background-color: transparent; -fx-border-color: #808080; -fx-border-width: 2; -fx-border-radius: 17.5; -fx-background-radius: 17.5; -fx-padding: 6;">
                   <graphic>
                      <javafx.scene.shape.SVGPath content="M 17 7 L 15.59 8.41 L 18.17 11 H 8 v 2 h 10.17 l -2.58 2.58 L 17 17 l 5 -5 Z M 4 5 h 8 V 3 H 4 c -1.11 0 -2 0.89 -2 2 v 14 c 0 1.1 0.89 2 2 2 h 8 v -2 H 4 Z" fill="#808080" scaleX="1.0" scaleY="1.0" />
                   </graphic>
                </Button>
                <VBox alignment="CENTER_LEFT" prefHeight="60.0" prefWidth="140.0">
                    <children>
                        <VBox prefHeight="200.0" prefWidth="100.0">
                            <children>
                                <Label id="nameUser" fx:id="nameUser" style="-fx-font-weight: bold;" text="Nome de Usuário" />
                                <Label id="cargoUser" fx:id="cargoUser" style="-fx-text-fill: #666;" text="Coordenadora" />
                            </children>
                            <VBox.margin>
                                <Insets left="10.0" top="10.0" />
                            </VBox.margin>
                        </VBox>
                    </children>
                </VBox>

                <Region HBox.hgrow="ALWAYS" />

                <HBox alignment="CENTER_RIGHT" spacing="15.0">
                    <children>
                        <Button id="inicioButton" fx:id="inicioButton" onAction="#handleInicioButtonAction" styleClass="botao-topo" text="Início" />
                        <Button id="turmasButton" fx:id="turmasButton" onAction="#handleTurmasButtonAction" styleClass="botao-topo" text="Turmas" />
                        <Button id="professoresButton" fx:id="professoresButton" onAction="#handleProfessoresButtonAction" styleClass="botao-topo" text="Professores" />
                        <Button id="alunosButton" fx:id="alunosButton" onAction="#handleAlunosButtonAction" styleClass="botao-topo" text="Alunos" />
                    </children>
                </HBox>
            </children>
        </HBox>
    </top>

    <!-- CONTEÚDO CENTRAL -->
    <center>
        <ScrollPane fitToHeight="true" fitToWidth="true" style="-fx-background-color: white;">
        <VBox spacing="20.0" style="-fx-background-color: #ffffff;" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
            </padding>
            <children>
                <HBox alignment="CENTER" spacing="20.0" VBox.vgrow="ALWAYS">
                    <children>
                  <VBox HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                     <children>
                              <VBox spacing="8.0" style="-fx-border-color: #ddd; -fx-border-radius: 5;" VBox.vgrow="ALWAYS">
                                  <children>
                                      <Label text="Dados do aluno(a)">
                                          <VBox.margin>
                                              <Insets />
                                          </VBox.margin>
                                 <font>
                                    <Font name="System Bold" size="12.0" />
                                 </font>
                                      </Label>
                                      <Label text="Nome do aluno(a):">
                                          <VBox.margin>
                                              <Insets />
                                          </VBox.margin>
                                      </Label>
                                      <TextField fx:id="nomeAluno" promptText="Nome do Aluno(a)" styleClass="campo-digite-selecione">
                                          <VBox.margin>
                                              <Insets />
                                          </VBox.margin>
                                      </TextField>
                                      <Label text="CPF:">
                                          <VBox.margin>
                                              <Insets />
                                          </VBox.margin>
                                      </Label>
                                      <TextField fx:id="cpfAluno" promptText="000.000.000.-00" styleClass="campo-digite-selecione">
                                          <VBox.margin>
                                              <Insets />
                                          </VBox.margin>
                                      </TextField>
                                      <Label text="Data de Nascimento:">
                                          <VBox.margin>
                                              <Insets />
                                          </VBox.margin>
                                      </Label>
                                      <DatePicker fx:id="dtNascAluno" prefWidth="200.0" promptText="--/--/----" styleClass="campo-digite-selecione">
                                          <VBox.margin>
                                              <Insets />
                                          </VBox.margin>
                                      </DatePicker>
                                      <Label text="Gênero:">
                                          <VBox.margin>
                                              <Insets />
                                          </VBox.margin>
                                      </Label>
                                      <ChoiceBox fx:id="generoAluno" prefWidth="200.0" styleClass="campo-digite-selecione">
                                          <VBox.margin>
                                              <Insets />
                                          </VBox.margin>
                                      </ChoiceBox>
                                      <Label text="Qual o grau de escolaridade do aluno(a)?">
                                          <VBox.margin>
                                              <Insets />
                                          </VBox.margin>
                                      </Label>
                                      <ChoiceBox fx:id="grauEscAluno" prefWidth="200.0" styleClass="campo-digite-selecione">
                                          <VBox.margin>
                                              <Insets />
                                          </VBox.margin>
                                      </ChoiceBox>
                                      <Label text="Nome da Escola:">
                                          <VBox.margin>
                                              <Insets />
                                          </VBox.margin>
                                      </Label>
                                      <TextField fx:id="escolaAluno" promptText="Nome da Escola" styleClass="campo-digite-selecione">
                                          <VBox.margin>
                                              <Insets />
                                          </VBox.margin>
                                      </TextField>
                                      <Label text="CID:">
                                          <VBox.margin>
                                              <Insets />
                                          </VBox.margin>
                                      </Label>
                                      <TextField fx:id="cidAluno" promptText="CID" styleClass="campo-digite-selecione">
                                          <VBox.margin>
                                              <Insets />
                                          </VBox.margin>
                                      </TextField>
                                      <Label text="NIS:">
                                          <VBox.margin>
                                              <Insets />
                                          </VBox.margin>
                                      </Label>
                                      <TextField fx:id="nisAluno" promptText="000.00000.00-0" styleClass="campo-digite-selecione">
                                          <VBox.margin>
                                              <Insets />
                                          </VBox.margin>
                                      </TextField>
                                      <Label text="Observações:">
                                          <VBox.margin>
                                              <Insets />
                                          </VBox.margin>
                                      </Label>
                                      <TextArea fx:id="obsAluno" prefHeight="100.0" promptText="Guarde suas observações sobre o Aluno(a) aqui." styleClass="campo-digite-selecione">
                                          <VBox.margin>
                                              <Insets />
                                          </VBox.margin>
                                      </TextArea>
                                  </children>
                           <padding>
                              <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                           </padding>
                              </VBox>
                        <HBox alignment="BOTTOM_LEFT" VBox.vgrow="ALWAYS">
                           <children>
                                        <Button fx:id="cancelCadastroBt" mnemonicParsing="false" prefWidth="220.0" styleClass="botao-cancelar-voltar-sair" text="Cancelar" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
                        <VBox spacing="20.0">
                            <children>
                                <VBox spacing="8.0" style="-fx-border-color: #ddd; -fx-border-radius: 5;" VBox.vgrow="ALWAYS">
                                    <children>
                                        <Label text="Dados dos Responsáveis">
                                            <VBox.margin>
                                                <Insets />
                                            </VBox.margin>
                                 <font>
                                    <Font name="System Bold" size="12.0" />
                                 </font>
                                        </Label>
                                        <Label text="Nome do responsável:">
                                            <VBox.margin>
                                                <Insets />
                                            </VBox.margin>
                                        </Label>
                                        <TextField fx:id="nomeRespon" promptText="Nome do Responsável" styleClass="campo-digite-selecione">
                                            <VBox.margin>
                                                <Insets />
                                            </VBox.margin>
                                        </TextField>
                                        <Label text="CPF:">
                                            <VBox.margin>
                                                <Insets />
                                            </VBox.margin>
                                        </Label>
                                        <TextField fx:id="cpfRespon" promptText="000.000.000.-00" styleClass="campo-digite-selecione">
                                            <VBox.margin>
                                                <Insets />
                                            </VBox.margin>
                                        </TextField>
                                        <Label text="Parentesco:" />
                                        <ChoiceBox fx:id="parentescoRespon" prefWidth="200.0" styleClass="campo-digite-selecione">
                                            <VBox.margin>
                                                <Insets />
                                            </VBox.margin>
                                        </ChoiceBox>
                                        <Label text="Contato:">
                                            <VBox.margin>
                                                <Insets />
                                            </VBox.margin>
                                        </Label>
                                        <TextField fx:id="contatoRespon" promptText="(00) 0.0000-0000" styleClass="campo-digite-selecione">
                                            <VBox.margin>
                                                <Insets />
                                            </VBox.margin>
                                        </TextField>
                                        <Label text="Endereço">
                                            <VBox.margin>
                                                <Insets top="20.0" />
                                            </VBox.margin>
                                 <font>
                                    <Font name="System Bold" size="12.0" />
                                 </font>
                                        </Label>
                                        <HBox>
                                            <VBox.margin>
                                                <Insets />
                                            </VBox.margin>
                                            <children>
                                                <VBox>
                                                    <children>
                                                        <Label text="Estado:" />
                                                        <ChoiceBox fx:id="endUF" prefWidth="200.0" styleClass="campo-digite-selecione">
                                             <VBox.margin>
                                                <Insets />
                                             </VBox.margin></ChoiceBox>
                                                    </children>
                                                </VBox>
                                                <VBox>
                                                    <children>
                                                        <Label text="Cidade:" />
                                                        <TextField fx:id="endCidade" prefWidth="200.0" promptText="Cidade" styleClass="campo-digite-selecione">
                                                            <VBox.margin>
                                                                <Insets />
                                                            </VBox.margin>
                                                        </TextField>
                                                    </children>
                                                    <HBox.margin>
                                                        <Insets bottom="4.0" left="20.0" right="20.0" />
                                                    </HBox.margin>
                                                </VBox>
                                            </children>
                                        </HBox>
                                        <Label text="CEP:">
                                            <VBox.margin>
                                                <Insets />
                                            </VBox.margin>
                                        </Label>
                                        <TextField fx:id="endCEP" promptText="CEP" styleClass="campo-digite-selecione">
                                            <VBox.margin>
                                                <Insets />
                                            </VBox.margin>
                                        </TextField>
                                        <Label text="Rua:">
                                            <VBox.margin>
                                                <Insets />
                                            </VBox.margin>
                                        </Label>
                                        <TextField fx:id="endRua" promptText="Rua" styleClass="campo-digite-selecione">
                                            <VBox.margin>
                                                <Insets />
                                            </VBox.margin>
                                        </TextField>
                                        <HBox spacing="20.0">
                                            <children>
                                                <VBox>
                                                    <children>
                                                        <Label text="Número:" />
                                                        <TextField fx:id="endNum" prefWidth="200.0" promptText="Número" styleClass="campo-digite-selecione">
                                                            <VBox.margin>
                                                                <Insets />
                                                            </VBox.margin>
                                                        </TextField>
                                                    </children>
                                                    <HBox.margin>
                                                        <Insets />
                                                    </HBox.margin>
                                                </VBox>
                                                <VBox>
                                                    <children>
                                                        <Label text="Bairro:" />
                                                        <TextField fx:id="endBairro" prefWidth="200.0" promptText="Bairro" styleClass="campo-digite-selecione" />
                                                    </children>
                                                </VBox>
                                            </children>
                                            <VBox.margin>
                                                <Insets />
                                            </VBox.margin>
                                        </HBox>
                                        <Label text="Complemento:">
                                            <VBox.margin>
                                                <Insets />
                                            </VBox.margin>
                                        </Label>
                                        <TextField fx:id="endComplemento" promptText="Complemento" styleClass="campo-digite-selecione">
                                            <VBox.margin>
                                                <Insets />
                                            </VBox.margin>
                                        </TextField>
                                        <Label fx:id="ErrorForm" alignment="CENTER_RIGHT" prefHeight="21.0" prefWidth="445.0" textFill="#f24d4d" VBox.vgrow="ALWAYS">
                                            <VBox.margin>
                                                <Insets bottom="4.0" left="20.0" right="20.0" />
                                            </VBox.margin>
                                        </Label>
                                    </children>
                           <padding>
                              <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                           </padding>
                                </VBox>
                                <HBox alignment="BOTTOM_RIGHT" spacing="20.0" VBox.vgrow="ALWAYS">
                                    <children>
                                        <Button fx:id="cadastroAlunoBt" mnemonicParsing="false" prefWidth="220.0" styleClass="botao-concluir" text="Cadastrar aluno(a)" />
                                    </children>
                                    <VBox.margin>
                                        <Insets />
                                    </VBox.margin>
                                </HBox>
                            </children>
                        </VBox>
                    </children>
                </HBox>
            </children>
        </VBox>
        </ScrollPane>
    </center>
    
</BorderPane>
