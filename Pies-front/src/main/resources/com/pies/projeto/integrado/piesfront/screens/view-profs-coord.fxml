                        <Insets right="10.0" />
                    </HBox.margin>
                </Button>
                <VBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="270.0">
                    <children>
                        <Label id="nameUser" fx:id="nameUser" style="-fx-font-weight: bold;" text="Nome de Usuário" />
                        <Label id="cargoUser" fx:id="cargoUser" style="-fx-text-fill: #666;" text="Coordenadora" />
                    </children>
                </VBox>

                <Region HBox.hgrow="ALWAYS" />

                <HBox alignment="CENTER_RIGHT" spacing="15.0">
                    <children>
                        <Button id="inicioButton" fx:id="inicioButton" onAction="#handleInicioButtonAction" text="Início" />
                        <Button id="turmasButton" fx:id="turmasButton" onAction="#handleTurmasButtonAction" text="Turmas" />
                        <Button id="professoresButton" fx:id="professoresButton" onAction="#handleProfessoresButtonAction" text="Professores" />
                        <Button id="alunosButton" fx:id="alunosButton" onAction="#handleAlunosButtonAction" text="Alunos" />
                    </children>
                </HBox>
            </children>
        </HBox>
    </top>
    <center>
        <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
            <children>
                <Label id="indicadorDeTela" fx:id="indicadorDeTela" prefHeight="35.0" prefWidth="413.0" text="indicadorDeTela" VBox.vgrow="ALWAYS">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="20.0" left="5.0" top="20.0" />
                    </VBox.margin>
                </Label>
            <HBox alignment="CENTER_RIGHT" prefHeight="82.0" prefWidth="1160.0" spacing="10.0">
               <children>
                  <VBox alignment="CENTER_LEFT" prefHeight="82.0" prefWidth="464.0">
                     <children>
                        <Label prefHeight="21.0" prefWidth="380.0" text="Busque pelo Nome do(a) professor(a):" />
                        <TextField fx:id="buscarProf" />
                     </children>
                  </VBox>
                  <Button fx:id="buscarProfButton" mnemonicParsing="false" prefWidth="100.0" text="Buscar">
                     <HBox.margin>
                        <Insets top="20.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
                <ScrollPane fx:id="turmasScrollPane" fitToWidth="true" VBox.vgrow="ALWAYS">
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                    <content>
                        <FlowPane fx:id="containerCards" alignment="TOP_CENTER" hgap="30" style="-fx-padding: 20;" vgap="30">
                        </FlowPane>
                    </content>
                </ScrollPane>
            </children>
            <BorderPane.margin>
                <Insets bottom="30.0" left="30.0" right="30.0" />
            </BorderPane.margin>
        </VBox>
