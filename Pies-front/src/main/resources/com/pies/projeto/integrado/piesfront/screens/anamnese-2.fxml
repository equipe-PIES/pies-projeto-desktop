<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="anamnese" prefHeight="880.0" prefWidth="1220.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pies.projeto.integrado.piesfront.controllers.AnamneseController">

    <!-- TOPO -->
    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="60.0" style="-fx-background-color: #ffffff;">
            <padding>
                <Insets left="20.0" right="20.0" />
            </padding>
            <children>
                <Region prefHeight="60.0" prefWidth="15.0" />

                            <Button id="sairButton" fx:id="sairButton" onAction="#handleSairButtonAction" prefWidth="100.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Sair" />
                <VBox alignment="CENTER_LEFT" prefHeight="60.0" prefWidth="140.0">
               <children>
                        <VBox prefHeight="82.0" prefWidth="168.0">
                            <children>
                                <Label id="nameUser" fx:id="nameUser" style="-fx-font-weight: bold;" text="Nome de Usuário" />
                                <Label id="cargoUser" fx:id="cargoUser" style="-fx-text-fill: #666;" text="Professora" />
                            </children>
                     <VBox.margin>
                        <Insets left="10.0" top="10.0" />
                     </VBox.margin>
                        </VBox>
               </children>
                </VBox>

                <Region HBox.hgrow="ALWAYS" />

                <HBox alignment="CENTER_RIGHT" spacing="15.0">
                    <children>
                        <Button id="turmasButton" fx:id="turmasButton" onAction="#handleTurmasButtonAction" text="Turmas" />
                        <Button id="alunosButton" fx:id="alunosButton" text="Alunos" />
                    </children>
                </HBox>
            </children>
        </HBox>
    </top>


    <!-- CONTEÚDO CENTRAL -->
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: white;">
            <VBox spacing="20" style="-fx-background-color: white;">
                <padding>
                    <Insets bottom="20" left="30" right="30" top="30" />
                </padding>

                <children>

                <HBox spacing="20" VBox.vgrow="ALWAYS">
   <children>
   
                       <!-- COLUNA ESQUERDA -->
                       <VBox prefWidth="520" spacing="20">
      <children>
      
                              <!-- CONDIÇÕES DA GRAVIDEZ E DO NASCIMENTO -->
                              <VBox spacing="12" style="-fx-border-color: #ddd; -fx-border-radius: 5;">
                                  <padding>
                                      <Insets bottom="20" left="20" right="20" top="20" />
                                  </padding>
      
                                  <children>
                                      <Label style="-fx-font-weight: bold;" text="Condições da Gravidez e do Nascimento" />
      
                                      <Label text="Cidade de nascimento" />
                                      <TextField fx:id="cidadeNascimento" promptText="Digite" />
      
                                      <Label text="Maternidade em que nasceu" />
                                      <TextField fx:id="maternidade" promptText="Digite" />
      
                                      <Label text="Tipo de parto" />
                              <ChoiceBox fx:id="tipoParto" prefHeight="31.0" prefWidth="212.0" />
                                  </children>
                              </VBox>
      
                              <!-- PRIMEIRAS REAÇÕES DO BEBÊ -->
                              <VBox spacing="12" style="-fx-border-color: #ddd; -fx-border-radius: 5;">
                                  <padding>
                                      <Insets bottom="20" left="20" right="20" top="20" />
                                  </padding>
      
                                  <children>
                                      <Label style="-fx-font-weight: bold;" text="Primeiras Reações do Bebê" />
      
                                      <Label text="Chorou?" />
                              <HBox prefHeight="0.0" prefWidth="388.0">
                                 <children>
                                    <CheckBox fx:id="chorouSim" mnemonicParsing="false" text="Sim" />
                                    <CheckBox fx:id="chorouNao" mnemonicParsing="false" text="Não">
                                       <HBox.margin>
                                          <Insets left="20.0" />
                                       </HBox.margin>
                                    </CheckBox>
                                 </children>
                              </HBox>
      
                                      <Label text="Ficou roxo?" />
                              <HBox prefHeight="0.0" prefWidth="388.0">
                                 <children>
                                    <CheckBox fx:id="ficouRoxoSim" mnemonicParsing="false" text="Sim" />
                                    <CheckBox fx:id="ficouRoxoNao" mnemonicParsing="false" text="Não">
                                       <HBox.margin>
                                          <Insets left="20.0" />
                                       </HBox.margin>
                                    </CheckBox>
                                 </children>
                              </HBox>
      
                                      <Label text="Fez uso de incubadora?" />
                              <HBox prefHeight="0.0" prefWidth="388.0">
                                 <children>
                              <CheckBox fx:id="incubadoraSim" mnemonicParsing="false" text="Sim" />
                              <CheckBox fx:id="incubadoraNao" mnemonicParsing="false" text="Não">
                                  <HBox.margin>
                                     <Insets left="20.0" />
                                  </HBox.margin>
                               </CheckBox>
                                 </children>
                              </HBox>
      
                                      <Label text="Foi amamentado?" />
                              <HBox prefHeight="0.0" prefWidth="388.0">
                                 <children>
                                    <CheckBox fx:id="amamentadoSim" mnemonicParsing="false" text="Sim" />
                                    <CheckBox fx:id="amamentadoNao" mnemonicParsing="false" text="Não">
                                       <HBox.margin>
                                          <Insets left="20.0" />
                                       </HBox.margin>
                                    </CheckBox>
                                 </children>
                              </HBox>
                                  </children>
                              </VBox>
      </children>
                     <HBox.margin>
                        <Insets left="50.0" />
                     </HBox.margin>
   
                       </VBox>
   
   
                       <!-- COLUNA DIREITA -->
                       <VBox prefWidth="520" spacing="12" style="-fx-border-color: #ddd; -fx-border-radius: 5;">
                           <padding>
                               <Insets bottom="20" left="20" right="20" top="20" />
                           </padding>
   
                           <children>
                               <Label style="-fx-font-weight: bold;" text="Aspectos Desenvolvimento Psicomotor" />
   
                               <Label text="Sustentou a cabeça?" />
                        <HBox prefHeight="0.0" prefWidth="388.0">
                           <children>
                              <CheckBox fx:id="sustentouCabecaSim" mnemonicParsing="false" text="Sim" />
                              <CheckBox fx:id="sustentouCabecaNao" mnemonicParsing="false" text="Não">
                                 <HBox.margin>
                                    <Insets left="20.0" />
                                 </HBox.margin>
                              </CheckBox>
                           </children>
                        </HBox>
                        <Label fx:id="lblSustentouCabecaMeses" text="Com quantos meses?" />
                               <TextField fx:id="sustentouCabeca" promptText="Digite" />
   
                               <Label text="Engatinhou?" />
                        <HBox prefHeight="0.0" prefWidth="388.0">
                           <children>
                              <CheckBox fx:id="engatinhouSim" mnemonicParsing="false" text="Sim" />
                              <CheckBox fx:id="engatinhouNao" mnemonicParsing="false" text="Não">
                                  <HBox.margin>
                                     <Insets left="20.0" />
                                  </HBox.margin>
                               </CheckBox>
                           </children>
                        </HBox>
                        <Label fx:id="lblEngatinhouMeses" text="Com quantos meses?" />
                               <TextField fx:id="engatinhou" promptText="Digite" />
   
                               <Label text="Sentou?" />
                        <HBox prefHeight="0.0" prefWidth="388.0">
                           <children>
                              <CheckBox fx:id="sentouSim" mnemonicParsing="false" text="Sim" />
                              <CheckBox fx:id="sentouNao" mnemonicParsing="false" text="Não">
                                  <HBox.margin>
                                     <Insets left="20.0" />
                                  </HBox.margin>
                               </CheckBox>
                           </children>
                        </HBox>
                        <Label fx:id="lblSentouMeses" text="Com quantos meses?" />
                               <TextField fx:id="sentou" promptText="Digite" />
   
                               <Label text="Andou? " />
                        <HBox prefHeight="0.0" prefWidth="388.0">
                           <children>
                              <CheckBox fx:id="andouSim" mnemonicParsing="false" text="Sim" />
                              <CheckBox fx:id="andouNao" mnemonicParsing="false" text="Não">
                                  <HBox.margin>
                                     <Insets left="20.0" />
                                  </HBox.margin>
                               </CheckBox>
                           </children>
                        </HBox>
                        <Label fx:id="lblAndouMeses" text="Com quantos meses?" />
                               <TextField fx:id="andou" promptText="Digite" />
   
                               <Label text="Precisou de terapia? " />
                        <HBox prefHeight="0.0" prefWidth="388.0">
                           <children>
                              <CheckBox fx:id="terapiaSim" mnemonicParsing="false" text="Sim" />
                              <CheckBox fx:id="terapiaNao" mnemonicParsing="false" text="Não">
                                  <HBox.margin>
                                     <Insets left="20.0" />
                                  </HBox.margin>
                               </CheckBox>
                           </children>
                        </HBox>
                        <Label fx:id="lblTerapiaMotivo" text="Qual o motivo?" />
                               <TextField fx:id="terapia" promptText="Digite" />
   
                               <Label text="Falou?" />
                        <HBox prefHeight="0.0" prefWidth="388.0">
                           <children>
                              <CheckBox fx:id="falouSim" mnemonicParsing="false" text="Sim" />
                              <CheckBox fx:id="falouNao" mnemonicParsing="false" text="Não">
                                  <HBox.margin>
                                     <Insets left="20.0" />
                                  </HBox.margin>
                               </CheckBox>
                           </children>
                        </HBox>
                        <Label fx:id="lblFalouMeses" text="Com quantos meses?" />
                               <TextField fx:id="falou" promptText="Digite" />
                           </children>
   
                       </VBox>
   </children>

                </HBox>


                <!-- BOTÕES -->
                <HBox alignment="CENTER_RIGHT" spacing="20">
                    <children>
                        <Label fx:id="validationMsg" textFill="#e74c3c" visible="false">Algum campo está em branco. Preencha para prosseguir.</Label>
                        <Button onAction="#handleCancelAction" text="Cancelar" />
                        <Button onAction="#handleGoToAnamnese1" text="Voltar" />
                        <Button onAction="#handleGoToAnamnese3" style="-fx-background-color: #bdbdbd;" text="Seguinte" />
                    </children>
                </HBox>

            </children>
        </VBox>
        </ScrollPane>
    </center>


</BorderPane>
