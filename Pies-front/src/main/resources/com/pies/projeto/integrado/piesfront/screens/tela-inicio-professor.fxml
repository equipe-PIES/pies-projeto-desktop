<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane fx:id="professorInicioPane" prefHeight="768.0" prefWidth="1024.0"
            xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1">

    <!-- TOPO -->
    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="60.0"
              style="-fx-background-color: #ffffff; -fx-border-color: #e0e0e0; -fx-border-width: 0 0 1 0;">
            <padding>
                <Insets left="20.0" right="20.0" />
            </padding>

            <Label text="AmparoEdu" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

            <Region HBox.hgrow="ALWAYS" />

            <HBox alignment="CENTER_RIGHT" spacing="15.0">
                <Button text="Início" style="-fx-background-color: transparent;" />
                <Button text="Turmas" style="-fx-background-color: transparent;" />
                <Button text="Alunos" style="-fx-background-color: transparent;" />
                <Button text="Relatórios" style="-fx-background-color: transparent;" />
            </HBox>
        </HBox>
    </top>

    <!-- MENU LATERAL -->
    <left>
        <VBox prefWidth="200.0"
              style="-fx-background-color: #f5f5f5; -fx-border-color: #e0e0e0; -fx-border-width: 0 1 0 0;">
            <padding>
                <Insets top="20.0" bottom="20.0" />
            </padding>

            <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-padding: 0 0 15 20;">
                <ImageView fitHeight="40.0" fitWidth="40.0"
                           style="-fx-background-color: #d0d0d0; -fx-background-radius: 50%;" />
                <VBox>
                    <Label text="Maria" style="-fx-font-weight: bold; -fx-font-size: 14px;" />
                    <Label text="Professora" style="-fx-text-fill: gray; -fx-font-size: 12px;" />
                </VBox>
            </HBox>

            <Region VBox.vgrow="ALWAYS" />

            <Button text="⟵ Sair"
                    prefWidth="160.0"
                    style="-fx-background-color: #e0e0e0; -fx-background-radius: 5; -fx-padding: 8;"
                    alignment="CENTER" VBox.margin="10" />
        </VBox>
    </left>

    <!-- CONTEÚDO CENTRAL -->
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
            <VBox spacing="30.0" style="-fx-background-color: #ffffff;">
                <padding>
                    <Insets top="30.0" right="40.0" bottom="30.0" left="40.0" />
                </padding>

                <!-- Título da página -->
                <Label text="Início" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

                <!-- Imagem principal / placeholder -->
                <VBox prefHeight="220.0" style="-fx-background-color: #f0f0f0; -fx-border-color: #cccccc; -fx-border-width: 1;">
                    <Label text="[Espaço reservado para imagem ou gráfico]"
                           alignment="CENTER" VBox.vgrow="ALWAYS" />
                </VBox>

                <!-- Seção sobre o sistema -->
                <VBox spacing="10.0">
                    <Label text="Sobre a ferramenta AmparoEdu"
                           style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                    <Label text="Subheading" style="-fx-text-fill: gray; -fx-font-size: 13px;" />
                    <TextFlow>
                        <Text text="Body text for your whole article or post. We'll put in some lorem ipsum to show how a filled-out page might look:" />
                    </TextFlow>
                    <TextFlow>
                        <Text text="Excepteur efficient emerging, minim veniam, anim aute carefully curated Ginz conversation exquisite perfect nostrud nisi intricate content. Duis international first-class nulla ut. Punctual adipisicing, essential lovely queen tempor eiusmod iure. Exclusive izakaya charming Scandinavian impeccable aute quality of life soft power pariatur Melbourne occaecat discerning. Qui wardrobe aliquip et, Porter destination Toto remarkable officia Helsinki exceptuer Basset hound. Zürich sleepy perfect consectetur." />
                    </TextFlow>
                </VBox>
            </VBox>
        </ScrollPane>
    </center>

</BorderPane>
