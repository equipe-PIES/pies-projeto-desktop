<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<BorderPane fx:id="cadastroTurma" prefHeight="880.0" prefWidth="1220.0" stylesheets="@../styles/style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pies.projeto.integrado.piesfront.controllers.CadastroTurmaController">

    <!-- TOPO -->
    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="60.0" style="-fx-background-color: #ffffff;">
            <padding>
                <Insets left="20.0" right="20.0" />
            </padding>
            <children>
                <Region prefHeight="60.0" prefWidth="15.0" />

                <Button id="sairButton" fx:id="sairButton" onAction="#handleSairButtonAction" prefHeight="35.0" prefWidth="35.0" style="-fx-background-color: transparent; -fx-border-color: #808080; -fx-border-width: 2; -fx-border-radius: 17.5; -fx-background-radius: 17.5; -fx-padding: 6;">
                   <graphic>
                      <javafx.scene.shape.SVGPath content="M 17 7 L 15.59 8.41 L 18.17 11 H 8 v 2 h 10.17 l -2.58 2.58 L 17 17 l 5 -5 Z M 4 5 h 8 V 3 H 4 c -1.11 0 -2 0.89 -2 2 v 14 c 0 1.1 0.89 2 2 2 h 8 v -2 H 4 Z" fill="#808080" scaleX="1.0" scaleY="1.0" />
                   </graphic>
                </Button>
                <VBox alignment="CENTER_LEFT" prefHeight="60.0" prefWidth="140.0">
                    <children>
                        <VBox prefHeight="200.0" prefWidth="100.0">
                            <children>
                                <Label id="nameUser" fx:id="nameUser" style="-fx-font-weight: bold;" text="Nome de Usuário" />
                                <Label id="cargoUser" fx:id="cargoUser" style="-fx-text-fill: #666;" text="Coordenadora" />
                            </children>
                            <VBox.margin>
                                <Insets left="10.0" top="10.0" />
                            </VBox.margin>
                        </VBox>
                    </children>
                </VBox>

                <Region HBox.hgrow="ALWAYS" />

                <HBox alignment="CENTER_RIGHT" spacing="15.0">
                    <children>
                        <Button id="inicioButton" fx:id="inicioButton" onAction="#handleInicioButtonAction" styleClass="botao-topo" text="Início" />
                        <Button id="turmasButton" fx:id="turmasButton" styleClass="botao-topo" text="Turmas" />
                        <Button id="professoresButton" fx:id="professoresButton" styleClass="botao-topo" text="Professores" />
                        <Button id="alunosButton" fx:id="alunosButton" styleClass="botao-topo" text="Alunos" />
                    </children>
                </HBox>
            </children>
        </HBox>
    </top>

    <!-- CONTEÚDO CENTRAL -->
    <center>
        <VBox spacing="20.0" style="-fx-background-color: #ffffff;" BorderPane.alignment="CENTER">
            <children>
                <HBox alignment="CENTER" spacing="20.0" VBox.vgrow="ALWAYS">
                    <children>
                  <VBox HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                     <children>
                              <VBox spacing="10.0" style="-fx-border-color: #ddd; -fx-border-radius: 5;" VBox.vgrow="ALWAYS">
                                  <children>
                                      <Label text="Dados da Turma">
                                          <VBox.margin>
                                              <Insets />
                                          </VBox.margin>
                                 <font>
                                    <Font name="System Bold" size="12.0" />
                                 </font>
                                      </Label>
                                      <Label text="Nome da Turma:">
                                          <VBox.margin>
                                              <Insets />
                                          </VBox.margin>
                                      </Label>
                                      <TextField fx:id="nomeTurmaField" promptText="Ex: Turma A - Infantil" styleClass="campo-digite-selecione">
                                          <VBox.margin>
                                              <Insets bottom="10.0" />
                                          </VBox.margin>
                                      </TextField>
                                      <Label text="Qual o grau de escolaridade da turma?">
                                          <VBox.margin>
                                              <Insets />
                                          </VBox.margin>
                                      </Label>
                                      <ChoiceBox fx:id="grauTurma" prefWidth="200.0" styleClass="campo-digite-selecione">
                                          <VBox.margin>
                                              <Insets />
                                          </VBox.margin>
                                      </ChoiceBox>
                                      <Label text="Faixa etária dos alunos">
                                          <VBox.margin>
                                              <Insets />
                                          </VBox.margin>
                                      </Label>
                                      <ChoiceBox fx:id="idadeAlunos" prefWidth="200.0" styleClass="campo-digite-selecione">
                                          <VBox.margin>
                                              <Insets />
                                          </VBox.margin>
                                      </ChoiceBox>
                                      <Label text="Professor(a) Responsável:">
                                          <VBox.margin>
                                              <Insets />
                                          </VBox.margin>
                                      </Label>
                                      <ChoiceBox fx:id="profRespon" prefWidth="200.0" styleClass="campo-digite-selecione">
                                          <VBox.margin>
                                              <Insets />
                                          </VBox.margin>
                                      </ChoiceBox>
                                      <Label text="Turno:">
                                          <VBox.margin>
                                              <Insets />
                                          </VBox.margin>
                                      </Label>
                                      <ChoiceBox fx:id="turnoTurma" prefWidth="200.0" styleClass="campo-digite-selecione">
                                          <VBox.margin>
                                              <Insets />
                                          </VBox.margin>
                                      </ChoiceBox>
                                  </children>
                           <padding>
                              <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                           </padding>
                              </VBox>
                        <HBox alignment="BOTTOM_LEFT" VBox.vgrow="ALWAYS">
                           <children>
                                        <Button fx:id="cancelCadastroBt" mnemonicParsing="false" prefHeight="30.0" prefWidth="220.0" styleClass="botao-cancelar-voltar-sair" text="Cancelar" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
                        <VBox spacing="20.0" HBox.hgrow="ALWAYS">
                            <children>
                                <VBox spacing="10.0" style="-fx-border-color: #ddd; -fx-border-radius: 5;" VBox.vgrow="ALWAYS">
                                    <children>
                                        <Label text="Adicionar alunos(as)">
                                            <VBox.margin>
                                                <Insets />
                                            </VBox.margin>
                                 <font>
                                    <Font name="System Bold" size="12.0" />
                                 </font>
                                        </Label>
                                        <Label text="Filtrar por escolaridade">
                                            <VBox.margin>
                                                <Insets />
                                            </VBox.margin>
                                        </Label>
                                        <ChoiceBox fx:id="filtroEscolaridade" prefWidth="200.0" styleClass="campo-digite-selecione">
                                            <VBox.margin>
                                                <Insets />
                                            </VBox.margin>
                                        </ChoiceBox>
                                        <Label text="Busque o aluno(a) pelo nome.">
                                            <VBox.margin>
                                                <Insets />
                                            </VBox.margin>
                                        </Label>
                                        <HBox prefHeight="34.0" prefWidth="433.0">
                                            <children>
                                                <TextField fx:id="buscarAlunoNome" prefWidth="300.0" promptText="Digite o nome do aluno(a)" styleClass="campo-digite-selecione">
                                                    <HBox.margin>
                                                        <Insets />
                                                    </HBox.margin>
                                                </TextField>
                                                <Region prefHeight="34.0" prefWidth="8.0" />
                                                <Button fx:id="adicionarAlunoButton" mnemonicParsing="false" prefWidth="220.0" styleClass="botao-concluir" text="Adicionar selecionado" textFill="WHITE">
                                                    <HBox.margin>
                                                        <Insets right="20.0" />
                                                    </HBox.margin>
                                                </Button>
                                            </children>
                                        </HBox>
                                        <ListView fx:id="SugestoesAlunosList" style="-fx-border-color: #ddd; -fx-background-radius: 5; -fx-border-radius: 5;" styleClass="campo-digite-selecione">
                                            <VBox.margin>
                                                <Insets />
                                            </VBox.margin>
                                        </ListView>
                                        <Label text="Alunos adicionados à turma:">
                                            <VBox.margin>
                                                <Insets top="20.0" />
                                            </VBox.margin>
                                 <font>
                                    <Font name="System Bold" size="12.0" />
                                 </font>
                                        </Label>
                                        <ListView fx:id="ListAlunosTurma" style="-fx-border-radius: 5; -fx-background-radius: 5; -fx-border-color: #ddd;" styleClass="campo-digite-selecione">
                                            <VBox.margin>
                                                <Insets />
                                            </VBox.margin>
                                        </ListView>
                                    </children>
                           <padding>
                              <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                           </padding>
                                </VBox>
                                <Label fx:id="erroMensagem" text="" textFill="red" wrapText="true">
                                    <VBox.margin>
                                        <Insets bottom="10.0" left="10.0" right="10.0" />
                                    </VBox.margin>
                                </Label>
                                <HBox alignment="BOTTOM_RIGHT" VBox.vgrow="ALWAYS">
                                    <children>
                                        <Button fx:id="cadastroTurmaButton" mnemonicParsing="false" prefWidth="220.0" styleClass="botao-concluir" text="Cadastrar Turma" />
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
            </padding>
        </VBox>
    </center>

</BorderPane>
