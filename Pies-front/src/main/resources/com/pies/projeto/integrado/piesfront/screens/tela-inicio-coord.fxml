<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane fx:id="coordInicioPane" prefHeight="880.0" prefWidth="1220.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pies.projeto.integrado.piesfront.controllers.HomeCoordController">

    <!-- TOPO -->
    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="60.0" style="-fx-background-color: #ffffff;">
            <padding>
                <Insets left="20.0" right="20.0" />
            </padding>
            <children>
                <Region prefHeight="60.0" prefWidth="15.0" />

                <Button id="sairButton" fx:id="sairButton" onAction="#handleSairButtonAction" prefWidth="100.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Sair" />
                <VBox alignment="CENTER_LEFT" prefHeight="60.0" prefWidth="140.0">
                    <children>
                        <VBox prefHeight="200.0" prefWidth="100.0">
                            <children>
                                <Label id="nameUser" fx:id="nameUser" style="-fx-font-weight: bold;" text="Nome de Usuário" />
                                <Label id="cargoUser" fx:id="cargoUser" style="-fx-text-fill: #666;" text="Coordenadora" />
                            </children>
                            <VBox.margin>
                                <Insets left="10.0" top="10.0" />
                            </VBox.margin>
                        </VBox>
                    </children>
                </VBox>

                <Region HBox.hgrow="ALWAYS" />

                <HBox alignment="CENTER_RIGHT" spacing="15.0">
                    <children>
                        <Button id="inicioButton" fx:id="inicioButton" onAction="#handleInicioButtonAction" text="Início" />
                        <Button id="turmasButton" fx:id="turmasButton" text="Turmas" />
                        <Button id="professoresButton" fx:id="professoresButton" text="Professores" />
                        <Button id="alunosButton" fx:id="alunosButton" text="Alunos" />
                    </children>
                </HBox>
            </children>
        </HBox>
    </top>

    <!-- CONTEÚDO CENTRAL -->
    <center>
        <VBox style="-fx-background-color: #ffffff;" styleClass="center-thing" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
            </padding>
            <children>

                <HBox alignment="CENTER" fillHeight="false" spacing="20.0">
                    <VBox alignment="CENTER" fillWidth="false" spacing="10.0" style="-fx-background-color: #ffffff; -fx-border-color: #ddd; -fx-border-radius: 5; -fx-padding: 15;">
                        <children>
                            <Label alignment="TOP_LEFT" style="-fx-font-weight: bold;" text="Cadastrar Turma" wrapText="true">
                                <VBox.margin>
                                    <Insets />
                                </VBox.margin>
                                <font>
                                    <Font name="Inter Semi Bold" size="22.0" />
                                </font>
                            </Label>
                            <Label alignment="TOP_LEFT" text="Adicione uma nova turma ao seu sistema." wrapText="true">
                                <font>
                                    <Font name="Inter Regular" size="14.0" />
                                </font></Label>
                            <Button fx:id="addTurma" onAction="#handleAddTurmaAction" prefHeight="30.0" prefWidth="220.0" style="-fx-background-color: #e3e3e3; -fx-border-color: black; -fx-border-radius: 8; -fx-border-width: 0.5; -fx-background-radius: 8;" text="Adicionar">
                                <font>
                                    <Font name="Inter Semi Bold" size="12.0" />
                                </font>
                                <VBox.margin>
                                    <Insets top="10.0" />
                                </VBox.margin></Button>
                        </children>
                        <HBox.margin>
                            <Insets />
                        </HBox.margin>
                    </VBox>

                    <VBox alignment="CENTER" fillWidth="false" spacing="10.0" style="-fx-background-color: #ffffff; -fx-border-color: #ddd; -fx-border-radius: 5; -fx-padding: 15;">
                        <children>
                            <Label contentDisplay="CENTER" style="-fx-font-weight: bold;" text="Cadastrar Professor(a)">
                                <VBox.margin>
                                    <Insets />
                                </VBox.margin>
                                <font>
                                    <Font name="Inter Semi Bold" size="22.0" />
                                </font>
                            </Label>
                            <Label alignment="TOP_LEFT" text="Adicione um novo professor(a) ao seu sistema." wrapText="true">
                                <font>
                                    <Font name="Inter Regular" size="14.0" />
                                </font></Label>
                            <Button fx:id="addProf" onAction="#handleAddProfAction" prefHeight="30.0" prefWidth="220.0" style="-fx-background-color: #e3e3e3; -fx-border-color: black; -fx-border-radius: 8; -fx-border-width: 0.5; -fx-background-radius: 8;" text="Adicionar">
                                <font>
                                    <Font name="Inter Semi Bold" size="12.0" />
                                </font>
                                <VBox.margin>
                                    <Insets top="10.0" />
                                </VBox.margin></Button>
                        </children>
                    </VBox>

                    <VBox alignment="CENTER" fillWidth="false" spacing="10.0" style="-fx-background-color: #ffffff; -fx-border-color: #ddd; -fx-border-radius: 5; -fx-padding: 15;">
                        <children>
                            <Label contentDisplay="CENTER" style="-fx-font-weight: bold;" text="Cadastrar Aluno(a)">
                                <VBox.margin>
                                    <Insets />
                                </VBox.margin>
                                <font>
                                    <Font name="Inter Semi Bold" size="22.0" />
                                </font>
                            </Label>
                            <Label alignment="TOP_LEFT" text="Adicione um novo aluno(a) ao seu sistema." wrapText="true">
                                <font>
                                    <Font name="Inter Regular" size="14.0" />
                                </font></Label>
                            <Button fx:id="addAluno" onAction="#handleAddAlunoAction" prefHeight="30.0" prefWidth="220.0" style="-fx-background-color: #e3e3e3; -fx-border-color: black; -fx-border-radius: 8; -fx-border-width: 0.5; -fx-background-radius: 8;" styleClass="top-button" text="Adicionar">
                                <font>
                                    <Font name="Inter Semi Bold" size="12.0" />
                                </font>
                                <VBox.margin>
                                    <Insets top="10.0" />
                                </VBox.margin></Button>
                        </children>
                    </VBox>
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                </HBox>
            </children>
            <BorderPane.margin>
                <Insets />
            </BorderPane.margin>
        </VBox>
    </center>

</BorderPane>
