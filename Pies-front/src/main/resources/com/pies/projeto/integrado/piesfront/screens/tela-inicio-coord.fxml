<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="mainBorderPane" prefHeight="768.0" prefWidth="1024.0"
            xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.pies.projeto.integrado.piesfront.controllers.LoginController">

    <!-- TOPO -->
    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="60.0" style="-fx-background-color: #ffffff;">
            <padding>
                <Insets left="20.0" right="20.0" />
            </padding>

            <Label text="AmparoEdu" />

            <Region HBox.hgrow="ALWAYS" />

            <HBox alignment="CENTER_RIGHT" spacing="15.0">
                <Button text="Início" />
                <Button text="Turmas" />
                <Button text="Professores" />
                <Button text="Alunos" />
                <Button text="Avisos" />
                <Label text="M" style="-fx-background-color: orange; -fx-text-fill: white;" />
            </HBox>
        </HBox>
    </top>

    <!-- MENU LATERAL -->
    <left>
        <VBox prefWidth="200.0" style="-fx-background-color: #f4f4f4;">
            <padding>
                <Insets top="20.0" />
            </padding>

            <Label text="Marta" />
            <Label text="Coordenadora" />

            <Button text="Coordenador - Início" prefWidth="200.0" />
            <Button text="Professor - Turmas" prefWidth="200.0" />

            <Region VBox.vgrow="ALWAYS" />

            <Button text="Sair" prefWidth="180.0" VBox.margin="10" />
        </VBox>
    </left>

    <!-- CONTEÚDO CENTRAL -->
    <center>
        <VBox spacing="20.0" style="-fx-background-color: #ffffff;">
            <padding>
                <Insets top="30.0" right="30.0" bottom="30.0" left="30.0" />
            </padding>

            <Label text="Início" />

            <VBox prefHeight="250.0" style="-fx-background-color: #f0f0f0;">
                <Label text="[Grande Placeholder para Gráfico/Informação]"
                       alignment="CENTER" VBox.vgrow="ALWAYS" />
            </VBox>

            <HBox alignment="CENTER" spacing="30.0">

                <!-- CARD 1 -->
                <VBox alignment="TOP_CENTER" prefWidth="250.0" style="-fx-background-color: #ffffff;">
                    <ImageView fitHeight="100.0" fitWidth="100.0" style="-fx-background-color: #f0f0f0;" />
                    <Label text="Cadastrar Turma" VBox.margin="10" />
                    <Label text="Adicione uma nova turma à lista de turmas no seu sistema."
                           wrapText="true" alignment="CENTER" VBox.margin="0 0 15 0" />
                    <Button text="Adicionar" style="-fx-background-color: #5cb85c; -fx-text-fill: white;" />
                </VBox>

                <!-- CARD 2 -->
                <VBox alignment="TOP_CENTER" prefWidth="250.0" style="-fx-background-color: #ffffff;">
                    <ImageView fitHeight="100.0" fitWidth="100.0" style="-fx-background-color: #f0f0f0;" />
                    <Label text="Cadastrar Professor(a)" VBox.margin="10" />
                    <Label text="Adicione um novo professor(a) ao seu sistema."
                           wrapText="true" alignment="CENTER" VBox.margin="0 0 15 0" />
                    <Button text="Adicionar" style="-fx-background-color: #5cb85c; -fx-text-fill: white;" />
                </VBox>

                <!-- CARD 3 -->
                <VBox alignment="TOP_CENTER" prefWidth="250.0" style="-fx-background-color: #ffffff;">
                    <ImageView fitHeight="100.0" fitWidth="100.0" style="-fx-background-color: #f0f0f0;" />
                    <Label text="Cadastrar Aluno(a)" VBox.margin="10" />
                    <Label text="Adicione um novo aluno(a) à lista de alunos no seu sistema."
                           wrapText="true" alignment="CENTER" VBox.margin="0 0 15 0" />
                    <Button text="Adicionar" style="-fx-background-color: #5cb85c; -fx-text-fill: white;" />
                </VBox>

            </HBox>

        </VBox>
    </center>

</BorderPane>
