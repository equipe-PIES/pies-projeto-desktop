<BorderPane fx:id="coordInicioPane" prefHeight="880.0" prefWidth="1220.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pies.projeto.integrado.piesfront.controllers.ViewTurmaController">

    <!-- TOPO -->
    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="60.0" style="-fx-background-color: #ffffff;">
            <padding>
                <Insets left="20.0" right="20.0" />
            </padding>
            <children>
                <Region prefHeight="60.0" prefWidth="15.0" />

                <Button id="sairButton" fx:id="sairButton" onAction="#handleSairButtonAction" prefWidth="100.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Sair">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
                </Button>
                  <VBox prefHeight="50.0" prefWidth="187.0">
                      <children>
                          <Label id="nameUser" fx:id="nameUser" style="-fx-font-weight: bold;" text="Nome de Usuário" />
                          <Label id="cargoUser" fx:id="cargoUser" style="-fx-text-fill: #666;" text="Professora" />
                      </children>
               <HBox.margin>
                  <Insets top="10.0" />
               </HBox.margin>
                  </VBox>
                <VBox alignment="CENTER_LEFT" prefHeight="60.0" prefWidth="140.0" />

                <Region HBox.hgrow="ALWAYS" />

                <HBox alignment="CENTER_RIGHT" spacing="15.0">
                    <children>
                        <Button id="turmasButton" fx:id="turmasButton" onAction="#handleTurmasButtonAction" text="Turmas" />
                        <Button id="alunosButton" fx:id="alunosButton" text="Alunos" />
                        <Button id="relatoriosButton" fx:id="relatoriosButton" text="Relatórios" />
                    </children>
                </HBox>
            </children>
        </HBox>
    </top>
    <center>
    </center>
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
                  <Label id="indicadorDeTela" fx:id="indicadorDeTela" prefHeight="35.0" prefWidth="430.0" text="indicadorDeTela">
               <VBox.margin>
                  <Insets left="20.0" top="20.0" />
               </VBox.margin>
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <HBox prefHeight="170.0" prefWidth="900.0" style="-fx-border-color: #c0c0c0;">
               <children>
                  <VBox prefHeight="169.0" prefWidth="436.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Label fx:id="nomeTurmaLabel" prefWidth="300.0" text="Nome da Turma">
                           <VBox.margin>
                              <Insets bottom="10.0" right="10.0" />
                           </VBox.margin>
                           <font>
                              <Font name="System Bold" size="24.0" />
                           </font>
                        </Label>
                        <Label contentDisplay="RIGHT" prefWidth="300.0" text="Total de alunos:">
                           <graphic>
                              <Label fx:id="totalAlunosTurma" />
                           </graphic>
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                        </Label>
                        <Label contentDisplay="RIGHT" prefWidth="300.0" text="Grau da turma:">
                           <graphic>
                              <Label fx:id="grauTurma">
                                 <padding>
                                    <Insets bottom="5.0" />
                                 </padding>
                              </Label>
                           </graphic>
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                        </Label>
                        <Label contentDisplay="RIGHT" prefWidth="300.0" text="Turno:">
                           <graphic>
                              <Label fx:id="turnoTurma" />
                           </graphic>
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                        </Label>
                        <Label contentDisplay="RIGHT" prefWidth="300.0" text="Faixa etária:">
                           <graphic>
                              <Label fx:id="fxEtariaTurma" />
                           </graphic>
                        </Label>
                     </children>
                     <HBox.margin>
                        <Insets left="20.0" right="20.0" />
                     </HBox.margin>
                     <padding>
                        <Insets right="20.0" top="15.0" />
                     </padding>
                  </VBox>
                  <VBox alignment="CENTER" prefHeight="200.0" prefWidth="300.0">
                     <HBox.margin>
                        <Insets right="20.0" />
                     </HBox.margin>
                  </VBox>
               </children>
               <VBox.margin>
                  <Insets left="20.0" right="20.0" top="20.0" />
               </VBox.margin>
            </HBox>
            <HBox alignment="CENTER" prefHeight="78.0" prefWidth="900.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-style: bold;" text="Alunos" textAlignment="CENTER">
                     <font>
                        <Font size="24.0" />
                     </font>
                     <HBox.margin>
                        <Insets left="30.0" />
                     </HBox.margin>
                  </Text>
                  <Region prefHeight="60.0" prefWidth="224.0" HBox.hgrow="ALWAYS" />
                  <TextField fx:id="buscarAluno" alignment="CENTER" prefHeight="31.0" prefWidth="355.0">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </TextField>
                  <Button fx:id="buscarAlunoButton" mnemonicParsing="false" onAction="#handleBuscarAlunoAction" prefWidth="200.0" text="Buscar">
                     <HBox.margin>
                        <Insets left="20.0" />
                     </HBox.margin>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets left="20.0" right="20.0" />
               </VBox.margin>
            </HBox>
            <ScrollPane prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
               <VBox.margin>
                  <Insets left="20.0" right="20.0" />
               </VBox.margin>
               <content>
                  <FlowPane fx:id="containerAlunos" />
               </content>
            </ScrollPane>
         </children>
      </VBox>
   </center>

</BorderPane>
