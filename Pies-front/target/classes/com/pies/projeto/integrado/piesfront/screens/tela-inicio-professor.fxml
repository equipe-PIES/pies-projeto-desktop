        <VBox spacing="20.0" style="-fx-background-color: #ffffff;">
            <padding>
                <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
            </padding>
            <children>

                <Label style="-fx-font-size: 20; -fx-font-weight: bold;" text="Início" />

                <!-- SEÇÃO DE DESTAQUE -->
